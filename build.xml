            </fileset>
        </copy>

        <copy todir="${temp}/packages">
            <fileset dir="packages">
                <include name="**"/>
            </fileset>
        </copy>

        <delete file="${temp_ckfinder}/aws/aws-sdk-php/composer.json"/>
